<h1>詳細画面</h1>
<p>ユーザー名: <%= @task.user.name %></p>
<p>タスク名: <%= @task.title %></p>
<p>内容: <%= @task.content %></p>
<p>作成日時: <%= l(@task.created_at, format: :short) %></p>
<p>終了期限: <%= l(@task.expiration_date, format: :short) %></p>
<p>ステータス: <%= @task.status %></p>
<p>ラベル:</p>
  <% @task.labels.each do |label| %>
    <%= label.label_name %>
    <% end %>

<%= link_to '編集する', edit_task_path(@task) %> |
<%= link_to '一覧へ戻る', tasks_path %>
