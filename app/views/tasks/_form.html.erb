<%= form_with(model: task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
        <%= form.label :タスク名 %> <br>
        <%= form.text_field :title %> <br>

        <%= form.label :内容 %> <br>
        <%= form.text_area :content %> <br>
  </div>
  <%= form.submit "登録する"%>
<% end %>