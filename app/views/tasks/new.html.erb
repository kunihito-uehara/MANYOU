<h1>新規タスク</h1>
<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= @task.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@task) do |f| %>
    <div><%= f.label :タスク %></div>
    <div><%= f.text_field :content %></div>
    <div><%= f.submit %></div>
<% end %>
<%= link_to '戻る', tasks_path %>