<p id="notice"><%= notice %></p>

<h1>タスク一覧画面</h1>
<table>
  <thead>
    <tr>
      <th>タスク名</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= link_to '確認', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), method: :delete,data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h4><%= link_to "追加",new_task_path %></h4>
